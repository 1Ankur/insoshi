<li class="list gallery">
  <div class="profile-image">
  <%= link_to image_tag(gallery.icon_url), gallery_path(gallery) %>
  </div>
  <p>
  <%= link_to h(gallery.title), gallery_path(gallery), :class => 'gallery_title' %>
  <% if current_person?(gallery.person) %>
      <%= link_to image_tag("icons/picture_edit.png", :class => 'actioner'),  
        edit_gallery_path(gallery),
        :title => 'Edit Gallery' %>
    <%# ## CANNOT DELETE ONLY GALLERY! %>
      <%= link_to_if(@person.galleries.count > 1, 
        image_tag("icons/picture_delete.png", :class => 'actioner'), 
              gallery, 
              :method => :delete, 
              :confirm => %(Are you sure you want to delete this gallery from your profile?),
         :title => "Delete Gallery") do '' end %>
  <%- end -%>
  <br />
  <%= display gallery.short_description %>
  </p>
</li>