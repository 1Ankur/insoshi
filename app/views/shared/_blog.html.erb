<%- column_div :type => :primary do -%>
  <h2><%= h @blog.person.name %>'s Blog</h2>

  <%- if @posts.empty? -%>
    <h3 class="blankslate">
      <%- if current_person?(@blog.person) -%>
        <%= link_to "Start this blog", new_blog_post_path(@blog) %>
      <%- end -%>
    </h3>
  <%- else -%>
    <ul class="list blog full">
      <%= render :partial => 'posts/blog_post', :collection => @posts %>
    </ul>
  <%- end -%>
  
  <%= will_paginate(@posts) %>
<%- end -%>

<%- if current_person?(@blog.person) -%>
  <%- column_div :type => :secondary do -%>
    <h2>Add new post</h2>
		<p><%= formatting_note %></p>
    <%= render :partial => 'posts/blog_form',
             :locals => { :url => blog_posts_path(@blog),
                          :method => :post } %>

  <%- end -%>
<%- end -%>