<%- unless @contacts.empty? -%>
  <h2>Contacts</h2>
  <ul class="grid contacts small">
    <%- @contacts.each do |contact| -%>
      <li class="vcard">
        <%= image_link(contact, :image_options => { :class => "photo fn" },
                                :link_options =>  { :class => "url" }) %>
      </li>
    <%- end -%>
  </ul>

<div class="see_all">
  <%= link_to "All contacts &raquo;", person_connections_path(person) %>
</div>
<%- end -%>