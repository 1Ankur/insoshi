<div class="column first span-14">
  <table>
    <tr><th colspan="2">Discussion topics</th></tr>
    <%- @topics.each do |topic| -%>
    <tr>
      <td>
        <a name="topic_<%= topic.id %>"></a>
        <%= link_to topic.name, 
                    forum_topic_posts_path(@forum, topic, 
                                           :posts => topic.posts.count) %>
        <div class="time">
          Created by <%= link_to topic.person.name, topic.person %>
          <%= time_ago_in_words(topic.created_at) %> ago
        </div>
      </td>
    </tr>
    <%- end -%>
  </ul>
  </table>

<%= will_paginate %>
</div>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'shared/minifeed' %>
<%- end -%>