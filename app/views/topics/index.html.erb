  <table>
    <tr><th colspan="2">Discussion topics</th></tr>
    <%- @topics.each do |topic| -%>
    <tr>
      <td>
        <%= link_to topic.name, forum_topic_posts_path(@forum, topic) %>
        <div class="time">
          Created by <%= link_to topic.person.name, topic.person %>
          <%= time_ago_in_words(topic.created_at) %> ago
        </div>
      </td>
    </tr>
    <%- end -%>
  </ul>
  </table>

<%= will_paginate %>
</div>


