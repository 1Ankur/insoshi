<h1>New topic</h1>

<%= error_messages_for :topic %>

<% form_for :topic, :url => forum_path do |f| %>
  <p>
    <b>Forum</b><br />
    <%= f.text_field :forum_id %>
  </p>

  <p>
    <b>Person</b><br />
    <%= f.text_field :person_id %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Posts count</b><br />
    <%= f.text_field :forum_posts_count %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', forum_path %>
