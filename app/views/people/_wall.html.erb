<div id="wall">
  <h3>Leave a wall comment</h3>

  <% form_for :comment, :url => person_comments_path(@person) do |f| %>
    <div class="form_tag">
      <%= f.text_area :body %>
    </div>
  
    <div class="form_tag">
      <%= submit_tag "Submit" %>
    </div>
  <% end %>

  <%- unless @person.comments.empty? -%>
    <ul class="wall">
    <%= render :partial => 'comment', :collection => @person.comments %>
    </ul>
  <%- end -%>
</div>