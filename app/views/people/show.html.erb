<% tabs = TabsRenderer.new(self, :id => "tabCol") %>
  <% tabs.create('tProfile', 'Profile', :class => "profile vcard") do %>
	<%= render_partial 'profile' %>
  <% end %>

  <% tabs.create('tRecentActivity', 'Recent Activity') do %>
    <%= render :partial => 'recent_activity' %>
  <% end %>

  <% tabs.create('tContacts', 'Contacts') do %>
    <%= render :partial => 'profile_contacts' %>
  <% end %>

  <% tabs.create('tWall', 'Wall') do %>
    <%= render :partial => 'wall' %>
  <% end %>

  <% tabs.create('tPhoto', 'Photos') do %>
	  <h2><%= @person.name %>'s Photos</h2>
	  <div class="button_container">
		    <div class="button"><%= link_to "Add Photo", new_photo_path() %></div>
		    <div class="clear"></div>
	  </div>
	  <% unless @person.photos.empty? %>
	  <ul class="">
		<% @person.photos.each do |photo| %>
		  <li>
			<p class="gallPhotoTitle">
			  <%= link_to photo_title(photo.filename), '#gpu' + photo_id(photo), :rel => 'facebox' %>
			  <div style="display: none;" id="gpu<%= photo_id(photo) -%>"><%= image_tag photo.public_filename -%> <div class="gpuTitle"><%= photo_title(photo.filename) -%> </div></div>
			</p>
			<p class='gallPhoto'>
			  <%= image_tag(photo.public_filename(:thumbnail)) %>
		    <%= link_to image_tag("icons/picture_edit.png", :class => 'actioner'), edit_photo_path(photo) %>
		    <%= link_to image_tag("icons/picture_delete.png", :class => 'actioner'), photo_path(photo), :method => :delete %>
			</p>
		  </li>
		<% end %>
	  </ul>
	  <% end %>
  <% end %>
<%= tabs.render %>

