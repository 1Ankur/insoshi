<h2><%= @topic.name %></h2>

<ul>
  <%- @posts.each do |post| -%>
    <li>
        Posted <%= time_ago_in_words(post.created_at) %> ago
        by <%= post.person.name %>
        <%- if current_person?(post.person) -%>
          | <%= link_to "Edit",
                        edit_forum_topic_post_path(@forum, @topic, post) %>
        <%- end -%>        
        <br />
        <%= sanitize post.body %>
    </li>
  <%- end -%>
</ul>

<h3>Add new post</h3>

<%= error_messages_for :post %>

<% form_for :post,
            :url => forum_topic_post_path(@forum, @topic, @post)  do |f| %>
  <div class="form_row">
    <%= f.text_area :body %>
  </div>

  <div class="form_row">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<%= link_to 'Back', forum_path %>