<% form_for :post, :url => url, :html => { :method => method,
                                           :id => "blogpost" }  do |f| %>

  <div class="form_row">
	<%= f.label :title %>
    <%= f.text_field :title, :size => 20 %>
  </div>

  <div class="form_row">
	<%= f.label :body, "Post" %>
    <%= f.text_area :body, :rows => 20 %>
  </div>

  <div class="form_row">
    <%= f.submit "Submit", :id => "post_submit", :class => "button" %>
  </div>
<% end %>
