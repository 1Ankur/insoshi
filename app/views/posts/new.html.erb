<h1>New post</h1>

<%= error_messages_for :post %>

<% form_for :post,
            :url => forum_topic_post_path(@forum, @topic, @post)  do |f| %>
  <div class="form_row">
    <%= f.text_area :body %>
  </div>

  <div class="form_row">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<%= link_to 'Back', forum_topic_path(@forum, @topic) %>
