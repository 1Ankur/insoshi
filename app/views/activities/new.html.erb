<h1>New activity</h1>

<%= error_messages_for :activity %>

<% form_for(@activity) do |f| %>
  <p>
    <b>Person</b><br />
    <%= f.text_field :person_id %>
  </p>

  <p>
    <b>Instance</b><br />
    <%= f.text_field :instance_id %>
  </p>

  <p>
    <b>Type</b><br />
    <%= f.text_field :type %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', activities_path %>
