<div class="module column first span-14">
  <%= render :partial => 'feed' %>


  <table>
    <tr><th colspan="2" style="border-bottom: 2px solid white;">Discussion Forum</th></tr>
    <%- @topics = Topic.find(:all, :order => "created_at DESC", :limit => 5) -%>
    <%- @topics.each do |topic| -%>
    <%- last_post = topic.posts.reverse.first -%>
    <tr class=<%= cycle("odd", "even") %>>
      <td>
        <%= link_to topic.name,
                    forum_topic_posts_path(topic.forum, topic) %>
        <br />
        <span class="quiet small">
        Last post
        <%= time_ago_in_words(last_post.created_at) %> ago
        by <%= link_to last_post.person.name, last_post.person %>
        </span>
      </td>
      <td>
      </td>
    <%- end -%>
    </tr>
  </table>  
</div>

<div class="module column last span-6">
  <%= render :partial => 'contacts' %>
</div>